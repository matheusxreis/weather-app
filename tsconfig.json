{
  "compilerOptions": {
    "target": "es2016",  
    "allowJs": true,                                
    "lib": ["DOM", "DOM.Iterable", "ESNext"],                                     
    "jsx": "react-jsx",                                
    "module": "commonjs",  
    "resolveJsonModule": true,                             
    "moduleResolution": "node",                       
    "declaration": true,                              
    "noEmit": true,                                 
    "isolatedModules": true,                        
    "allowSyntheticDefaultImports": true,             
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                     
    "skipLibCheck": true                               
  },
  "include": ["src"]
}
